{
  "name": "food",
  "version": "1.0",
  "description": "Commonsense knowledge about food, dietary restrictions, and eating behavior",

  "types": [
    {"name": "Food", "description": "Edible items"},
    {"name": "Ingredient", "description": "Components of food"},
    {"name": "DietaryRestriction", "description": "Dietary restrictions or preferences"}
  ],

  "relations": [
    {"name": "is_vegetarian", "signature": ["Person"], "range": "Bool"},
    {"name": "is_vegan", "signature": ["Person"], "range": "Bool"},
    {"name": "is_pescatarian", "signature": ["Person"], "range": "Bool"},
    {"name": "has_allergy", "signature": ["Person", "Ingredient"], "range": "Bool"},
    {"name": "contains_meat", "signature": ["Food"], "range": "Bool"},
    {"name": "contains_dairy", "signature": ["Food"], "range": "Bool"},
    {"name": "contains_eggs", "signature": ["Food"], "range": "Bool"},
    {"name": "contains_fish", "signature": ["Food"], "range": "Bool"},
    {"name": "contains_gluten", "signature": ["Food"], "range": "Bool"},
    {"name": "is_plant_based", "signature": ["Food"], "range": "Bool"},
    {"name": "would_eat", "signature": ["Person", "Food"], "range": "Bool"},
    {"name": "avoids_meat", "signature": ["Person"], "range": "Bool"},
    {"name": "avoids_animal_products", "signature": ["Person"], "range": "Bool"},
    {"name": "contains", "signature": ["Food", "Ingredient"], "range": "Bool"}
  ],

  "entities": [],

  "facts": [],

  "rules": [
    {
      "name": "vegans are vegetarians",
      "quantified_vars": [{"name": "p", "type": "Person"}],
      "antecedent": {"predicate": "is_vegan", "arguments": ["p"]},
      "consequent": {"predicate": "is_vegetarian", "arguments": ["p"]},
      "justification": "Veganism is a stricter form of vegetarianism"
    },
    {
      "name": "vegetarians avoid meat",
      "quantified_vars": [{"name": "p", "type": "Person"}],
      "antecedent": {"predicate": "is_vegetarian", "arguments": ["p"]},
      "consequent": {"predicate": "avoids_meat", "arguments": ["p"]},
      "justification": "Vegetarians by definition do not eat meat"
    },
    {
      "name": "vegans avoid all animal products",
      "quantified_vars": [{"name": "p", "type": "Person"}],
      "antecedent": {"predicate": "is_vegan", "arguments": ["p"]},
      "consequent": {"predicate": "avoids_animal_products", "arguments": ["p"]},
      "justification": "Vegans avoid all animal-derived products"
    },
    {
      "name": "plant-based foods have no meat",
      "quantified_vars": [{"name": "f", "type": "Food"}],
      "antecedent": {"predicate": "is_plant_based", "arguments": ["f"]},
      "consequent": {"predicate": "contains_meat", "arguments": ["f"], "negated": true},
      "justification": "Plant-based foods by definition contain no meat"
    },
    {
      "name": "plant-based foods have no dairy",
      "quantified_vars": [{"name": "f", "type": "Food"}],
      "antecedent": {"predicate": "is_plant_based", "arguments": ["f"]},
      "consequent": {"predicate": "contains_dairy", "arguments": ["f"], "negated": true},
      "justification": "Plant-based foods contain no animal products including dairy"
    },
    {
      "name": "plant-based foods have no eggs",
      "quantified_vars": [{"name": "f", "type": "Food"}],
      "antecedent": {"predicate": "is_plant_based", "arguments": ["f"]},
      "consequent": {"predicate": "contains_eggs", "arguments": ["f"], "negated": true},
      "justification": "Plant-based foods contain no animal products including eggs"
    },
    {
      "name": "vegetarians eat meatless food",
      "quantified_vars": [
        {"name": "p", "type": "Person"},
        {"name": "f", "type": "Food"}
      ],
      "antecedent": {
        "and": [
          {"predicate": "avoids_meat", "arguments": ["p"]},
          {"predicate": "contains_meat", "arguments": ["f"], "negated": true}
        ]
      },
      "consequent": {"predicate": "would_eat", "arguments": ["p", "f"]},
      "justification": "People who avoid meat will eat foods without meat"
    },
    {
      "name": "vegans eat plant-based food",
      "quantified_vars": [
        {"name": "p", "type": "Person"},
        {"name": "f", "type": "Food"}
      ],
      "antecedent": {
        "and": [
          {"predicate": "avoids_animal_products", "arguments": ["p"]},
          {"predicate": "is_plant_based", "arguments": ["f"]}
        ]
      },
      "consequent": {"predicate": "would_eat", "arguments": ["p", "f"]},
      "justification": "People avoiding animal products will eat plant-based foods"
    },
    {
      "name": "people with allergies avoid allergens",
      "quantified_vars": [
        {"name": "p", "type": "Person"},
        {"name": "f", "type": "Food"},
        {"name": "i", "type": "Ingredient"}
      ],
      "antecedent": {
        "and": [
          {"predicate": "has_allergy", "arguments": ["p", "i"]},
          {"predicate": "contains", "arguments": ["f", "i"]}
        ]
      },
      "consequent": {"predicate": "would_eat", "arguments": ["p", "f"], "negated": true},
      "justification": "People avoid foods containing ingredients they are allergic to"
    }
  ]
}
