{
  "name": "social",
  "version": "1.0",
  "description": "Commonsense knowledge about social relationships, obligations, and behavior",

  "types": [
    {"name": "Person", "description": "Human individuals"},
    {"name": "Relationship", "description": "Types of social relationships"}
  ],

  "relations": [
    {"name": "is_friend_of", "signature": ["Person", "Person"], "range": "Bool", "symmetric": true},
    {"name": "is_enemy_of", "signature": ["Person", "Person"], "range": "Bool", "symmetric": true},
    {"name": "is_parent_of", "signature": ["Person", "Person"], "range": "Bool"},
    {"name": "is_child_of", "signature": ["Person", "Person"], "range": "Bool"},
    {"name": "is_sibling_of", "signature": ["Person", "Person"], "range": "Bool", "symmetric": true},
    {"name": "is_married_to", "signature": ["Person", "Person"], "range": "Bool", "symmetric": true},
    {"name": "trusts", "signature": ["Person", "Person"], "range": "Bool"},
    {"name": "likes", "signature": ["Person", "Person"], "range": "Bool"},
    {"name": "dislikes", "signature": ["Person", "Person"], "range": "Bool"},
    {"name": "would_help", "signature": ["Person", "Person"], "range": "Bool"},
    {"name": "is_family_of", "signature": ["Person", "Person"], "range": "Bool", "symmetric": true},
    {"name": "knows_person", "signature": ["Person", "Person"], "range": "Bool", "symmetric": true}
  ],

  "entities": [],

  "facts": [],

  "rules": [
    {
      "name": "friends like each other",
      "quantified_vars": [
        {"name": "x", "type": "Person"},
        {"name": "y", "type": "Person"}
      ],
      "antecedent": {"predicate": "is_friend_of", "arguments": ["x", "y"]},
      "consequent": {"predicate": "likes", "arguments": ["x", "y"]},
      "justification": "Friends generally like each other"
    },
    {
      "name": "friends trust each other",
      "quantified_vars": [
        {"name": "x", "type": "Person"},
        {"name": "y", "type": "Person"}
      ],
      "antecedent": {"predicate": "is_friend_of", "arguments": ["x", "y"]},
      "consequent": {"predicate": "trusts", "arguments": ["x", "y"]},
      "justification": "Friendship implies trust"
    },
    {
      "name": "friends would help each other",
      "quantified_vars": [
        {"name": "x", "type": "Person"},
        {"name": "y", "type": "Person"}
      ],
      "antecedent": {"predicate": "is_friend_of", "arguments": ["x", "y"]},
      "consequent": {"predicate": "would_help", "arguments": ["x", "y"]},
      "justification": "Friends help each other"
    },
    {
      "name": "enemies dislike each other",
      "quantified_vars": [
        {"name": "x", "type": "Person"},
        {"name": "y", "type": "Person"}
      ],
      "antecedent": {"predicate": "is_enemy_of", "arguments": ["x", "y"]},
      "consequent": {"predicate": "dislikes", "arguments": ["x", "y"]},
      "justification": "Enemies dislike each other by definition"
    },
    {
      "name": "enemies do not trust each other",
      "quantified_vars": [
        {"name": "x", "type": "Person"},
        {"name": "y", "type": "Person"}
      ],
      "antecedent": {"predicate": "is_enemy_of", "arguments": ["x", "y"]},
      "consequent": {"predicate": "trusts", "arguments": ["x", "y"], "negated": true},
      "justification": "Enemies do not trust each other"
    },
    {
      "name": "parents are family",
      "quantified_vars": [
        {"name": "x", "type": "Person"},
        {"name": "y", "type": "Person"}
      ],
      "antecedent": {"predicate": "is_parent_of", "arguments": ["x", "y"]},
      "consequent": {"predicate": "is_family_of", "arguments": ["x", "y"]},
      "justification": "Parent-child is a family relationship"
    },
    {
      "name": "children are family",
      "quantified_vars": [
        {"name": "x", "type": "Person"},
        {"name": "y", "type": "Person"}
      ],
      "antecedent": {"predicate": "is_child_of", "arguments": ["x", "y"]},
      "consequent": {"predicate": "is_family_of", "arguments": ["x", "y"]},
      "justification": "Child-parent is a family relationship"
    },
    {
      "name": "siblings are family",
      "quantified_vars": [
        {"name": "x", "type": "Person"},
        {"name": "y", "type": "Person"}
      ],
      "antecedent": {"predicate": "is_sibling_of", "arguments": ["x", "y"]},
      "consequent": {"predicate": "is_family_of", "arguments": ["x", "y"]},
      "justification": "Siblings are family"
    },
    {
      "name": "spouses are family",
      "quantified_vars": [
        {"name": "x", "type": "Person"},
        {"name": "y", "type": "Person"}
      ],
      "antecedent": {"predicate": "is_married_to", "arguments": ["x", "y"]},
      "consequent": {"predicate": "is_family_of", "arguments": ["x", "y"]},
      "justification": "Marriage creates a family relationship"
    },
    {
      "name": "family members know each other",
      "quantified_vars": [
        {"name": "x", "type": "Person"},
        {"name": "y", "type": "Person"}
      ],
      "antecedent": {"predicate": "is_family_of", "arguments": ["x", "y"]},
      "consequent": {"predicate": "knows_person", "arguments": ["x", "y"]},
      "justification": "Family members know each other"
    },
    {
      "name": "parent child inverse",
      "quantified_vars": [
        {"name": "x", "type": "Person"},
        {"name": "y", "type": "Person"}
      ],
      "antecedent": {"predicate": "is_parent_of", "arguments": ["x", "y"]},
      "consequent": {"predicate": "is_child_of", "arguments": ["y", "x"]},
      "justification": "Parent-child relationship is symmetric in inverse"
    }
  ]
}
